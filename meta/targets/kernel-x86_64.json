
{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.target.v1",
    "id": "kernel-x86_64",
    "type": "target",
    "props": {
        "toolchain": "clang",
        "arch": "x86_64",
        "bits": "64",
        "sys": "kernel",
        "abi": "sysv",
        "loader":"limine",
        "encoding": "utf8",
        "freestanding": true,
        "host": false,
        "kernel": true
    },
    "tools": {
        "cc": {
            "cmd": "{shell.latest('clang')}",
             "args": [
                "-Isrc/libc",
                "-g",
                "-target",
                "x86_64-none-elf",
                "-ffreestanding",
                "-fno-stack-protector",
                "-mno-80387",
                "-mno-mmx",
                "-mno-3dnow",
                "-mno-sse",
                "-mno-sse2",
                "-D__STRICT_ANSI__",
                "-mno-red-zone",
                "-mcmodel=kernel",
                "-Wno-missing-field-initializers",
                "-std=gnu23" ,
                "-Wnull-dereference",
                "-Wstack-protector",
                "-Wstrict-overflow=3",
                "-Walloca",
                "-Wvla",
                "-Warray-bounds",
                "-Wtautological-constant-in-range-compare",
                "-Wloop-analysis",
                "-Wshadow",
                "-Wstrict-overflow=4",
                "-Wstrict-prototypes",
                "-Wswitch-default",
                "-Wthread-safety",
                "-Wunreachable-code-aggressive",
                "-Widiomatic-parentheses",
                "-Wfloat-equal",
                "-Wassign-enum",
                "-Wcomma"
            ]
        },
        "cxx": {
            "cmd": "{shell.latest('clang++')}",
            "args": [
                "-Isrc/libc",
                "-g",
                "-target",
                "x86_64-none-elf",
                "-ffreestanding",
                "-fno-exceptions",
                "-fno-rtti",
                "-D__STRICT_ANSI__",
                "-fno-stack-protector",
                "-fno-c++-static-destructors",
                "-fno-builtin",
                "-fno-threadsafe-statics",
                "-fno-c++-static-destructors",
                "-mno-80387",
                "-mno-mmx",
                "-mno-3dnow",
                "-mno-sse",
                "-mno-sse2",
                "-mno-red-zone",
                "-mcmodel=kernel",
                "-Wno-missing-field-initializers",
                "-std=c++2c",
                "-Wnull-dereference",
                "-Wstack-protector",
                "-Wstrict-overflow=3",
                "-Walloca",
                "-Wvla",
                "-Warray-bounds",
                "-Wtautological-constant-in-range-compare",
                "-Wloop-analysis",
                "-Wshadow",
                "-Wstrict-overflow=4",
                "-Wstrict-prototypes",
                "-Wswitch-default",
                "-Wthread-safety",
                "-Wunreachable-code-aggressive",
                "-Widiomatic-parentheses",
                "-Wfloat-equal",
                "-Wassign-enum",
                "-Wcomma", 
                "-Wfor-loop-analysis",
                "-Wimplicit-fallthrough"
            ]
        },
        "ld": {
            "cmd": "{shell.latest('ld.lld')}",
            "args": [
                "-m",
                "elf_x86_64",
                "-T",
                "{utils.relpath('kernel-x86_64.ld')}",
                "-z",
                "max-page-size=0x1000"
            ],
            "files": [
                "{utils.relpath('kernel-x86_64.ld')}"
            ]
        },
        "ar": {
            "cmd": "{shell.latest('llvm-ar')}",
            "args": [
                "rcs"
            ]
        },
        "as": {
            "cmd": 
                "nasm"
            ,
            "args": [
                "-f",
                "elf64"
            ]
        }
    }
}