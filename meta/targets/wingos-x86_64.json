{
    "$schema": "https://schemas.cute.engineering/stable/cutekit.manifest.component.v1",
    "id": "wingos-x86_64",
    "type": "target",
    "props": {
        "toolchain": "clang",
        "arch": "x86_64",
        "bits": "64",
        "sys": "wingos",
        "abi": "sysv",
        "encoding": "utf8",
        "freestanding": false,
        "host": false
    },
    "tools": {
        "cc": {
            "cmd": "{shell.latest('clang')}",
            "args": [
                "-g",
                "-Isrc/libc",
                "-target",
                "x86_64-none-elf",
                "-ffreestanding",
                "-fno-exceptions",
                "-fno-rtti",
                "-fno-stack-protector",

                "-mno-80387",
                "-mno-mmx",
                "-mno-3dnow",
                "-mno-sse",
                "-mno-sse2",
                "-std=gnu23"
            ]
        },
        "cxx": {
            "cmd": "{shell.latest('clang++')}",
            "args": [
                "-g",
                "-Isrc/libc",
                "-target",
                "x86_64-none-elf",
                "-ffreestanding",
                "-fno-exceptions",
                "-fno-rtti",
                "-fno-stack-protector",
                    
                "-mno-80387",
                "-mno-mmx",
                "-mno-3dnow",
                "-mno-sse",
                "-mno-sse2",
                "-mno-avx",
                "-std=c++2c",
                "-fno-c++-static-destructors",
                "-fno-builtin",
                "-fno-threadsafe-statics" ,
                   "-fno-stack-protector",
                "-fno-c++-static-destructors",
                "-fno-builtin",
                "-fno-threadsafe-statics"
               
            ]
        },
        "ld": {
            "cmd": "{shell.latest('ld.lld')}",
            "args": [
                "-m",
                "elf_x86_64",
                "-T",
                "meta/targets/wingos-x86_64.ld",
                "-z",
                "max-page-size=0x1000"
            ]
        },
        "ar": {
            "cmd": "{shell.latest('llvm-ar')}",
            "args": [
                "rcs"
            ]
        },
        "as": {
            "cmd": 
                "nasm"
            ,
            "args": [
                "-f",
                "elf64"
            ]
        }
    }
}